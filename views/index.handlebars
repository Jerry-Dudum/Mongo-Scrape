<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-center">Mongo Scraper - PC Gamer</h1>
    </div>
    <div class="text-center">
        <a href="/scrape">Scrape Articles</a>
        <span> | |</span>
        <a href="/articles">API Articles</a>
    </div>
</div>


<div id="articles">
        {{#each articles}}
        <div class="card bg-light">
            <img class="card-img-top" src="{{image}}">
            <div class="card-body">
                <h5 class="card-title text-dark">{{title}}</h5>
                <p class="card-text text-dark">{{summary}}</p>
                <a class="btn btn-primary" href="{{link}}">Read More</a>
                <button data-id="{{_id}}" class="notes btn btn-primary">Notes</button>
            </div>
        </div>
        {{/each}}
</div>

<div id="notes">

</div>